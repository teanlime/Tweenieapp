<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teanlime.tweenieapp.tweenieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TweenieappTheme">

        <activity
            android:name="com.teanlime.tweenieapp.ui.activity.authentication.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.teanlime.tweenieapp.ui.activity.tweets.TweetsActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="@string/twitter_fabric_key" />
    </application>

</manifest>
